<% include ../partials/header %>

<div id="tweetbody" class="container">
    <div class="input-box">
        <p class="lead">What's happening</p>
    </div>

    <div class="col-md-6 col-md-offset-3 tweetbody">
        <form id="sendTweet">
            <input type="text" class="form-control" id="tweet">
            <br>
            <button class="btn btn-primary" type="submit">Tweet</button>
        </form>
        <br>
        <div id="tweets">
         <% tweets.forEach(function(tweet){ %>
            <div class="media">
                <div class="media-left">
                    <a href="/user/<%= tweet.owner._id %>"><img class="media-object" src="<%= tweet.owner.photo %>" alt="user photo"></a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading"><%= tweet.owner.name %></h4>
                    <p><%= tweet.content %></p>
                </div>
            </div>
          <% }); %>  
        </div>
    </div>
</div>

<% include ../partials/footer %>